   <children>
      <TextArea fx:id="eventDetailsText" editable="false" layoutX="14.0" layoutY="38.0" prefHeight="549.0" prefWidth="268.0" />
      <ListView fx:id="eventList" layoutX="293.0" layoutY="38.0" onMouseClicked="#selectEvent" prefHeight="549.0" prefWidth="268.0" />
      <Button layoutX="14.0" layoutY="597.0" mnemonicParsing="false" onAction="#addEvent" text="Add" />
      <Button layoutX="60.0" layoutY="597.0" mnemonicParsing="false" onAction="#removeEvent" text="Remove" />
      <Button layoutX="130.0" layoutY="597.0" mnemonicParsing="false" onAction="#updateEvent" text="Update" />
      <RadioButton fx:id="dateRadio" layoutX="371.0" layoutY="594.0" mnemonicParsing="false" onMouseClicked="#sortEvents" selected="true" text="Date">
         <toggleGroup>
            <ToggleGroup fx:id="sortGroup" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="nameRadio" layoutX="371.0" layoutY="614.0" mnemonicParsing="false" onMouseClicked="#sortEvents" text="Name" toggleGroup="$sortGroup" />
      <RadioButton fx:id="locationRadio" layoutX="371.0" layoutY="637.0" mnemonicParsing="false" onMouseClicked="#sortEvents" text="Location" toggleGroup="$sortGroup" />
      <Label layoutX="86.0" layoutY="6.0" text="Event Details">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Label layoutX="381.0" layoutY="6.0" text="Event List">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Label layoutX="313.0" layoutY="592.0" text="Sort By:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </children>
